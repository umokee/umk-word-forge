[Unit]
Description=Task Manager API Service
After=network.target

[Service]
Type=simple
User=your-username
WorkingDirectory=/home/user/umtask/backend
Environment="TASK_MANAGER_API_KEY=your-secret-key-change-me"
Environment="PATH=/usr/bin:/usr/local/bin"
ExecStart=/usr/local/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10

# Логирование
StandardOutput=append:/var/log/task-manager/service.log
StandardError=append:/var/log/task-manager/service.log

# Безопасность
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths=/home/user/umtask/backend /var/log/task-manager

[Install]
WantedBy=multi-user.target
